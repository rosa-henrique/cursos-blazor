@typeparam TItem

<table class="table">
    <thead>
        <tr>
            @foreach (var header in Headers)
            {
                <th>@header</th>
            }
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Items)
        {
            <tr>
                @foreach (var template in ColumnTemplates)
                {
                    <td>@template(item)</td>
                }
            </tr>
        }
    </tbody>
</table>

@code {
    [Parameter]
    public IEnumerable<TItem> Items { get; set; }

    [Parameter]
    public List<string> Headers { get; set; }

    [Parameter]
    public List<Func<TItem, object>> ColumnTemplates { get; set; }
}


